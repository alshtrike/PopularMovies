<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_reviewer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subheader_text_size"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/list_item_padding"
            android:layout_marginStart="@dimen/list_item_padding" />

        <TextView
            android:id="@+id/tv_review_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="100"
            android:textColor="@color/colorLinkText"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/list_item_padding"
            android:layout_marginBottom="@dimen/list_item_padding"
            android:textSize="@dimen/movie_summary_size"/>

        <View
            android:background="@color/colorDarkText"
            android:layout_height="@dimen/movie_detail_separator_line"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/list_item_padding"
            android:layout_marginRight="@dimen/list_item_padding" />

</LinearLayout>