<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_movie_trailer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/trailer_list_item_height"
        android:textSize="@dimen/subheader_text_size"
        android:textColor="@color/colorLinkText"
        android:layout_marginStart="@dimen/list_item_padding"
        android:layout_marginTop="@dimen/list_item_padding"/>

    <View
        android:background="@color/colorDarkText"
        android:layout_height="@dimen/movie_detail_separator_line"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/list_item_padding"
        android:layout_marginRight="@dimen/list_item_padding" />

</LinearLayout>